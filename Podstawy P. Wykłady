import java.util.HashSet;
import java.util.Random;
import java.util.Scanner;
import java.util.Set;

public class Main{
    public static void main(String[] args) {
        // Tablica do przechowywania wylosowanych liczb
        int[] wylosowaneLiczby = new int[6];
        // Tablica do przechowywania liczb wprowadzonych przez użytkownika
        int[] uzytkownikLiczby = new int[6];

        // Losowanie 6 różnych liczb
        losujLiczby(wylosowaneLiczby);

        // Wczytywanie 6 różnych liczb od użytkownika
        wczytajLiczby(uzytkownikLiczby);

        // Sprawdzanie ile liczb powtarza się w obu tablicach
        int powtarzajaceLiczby = sprawdzPowtorzenia(wylosowaneLiczby, uzytkownikLiczby);

        // Wyświetlenie wyniku
        System.out.println("Liczby wylosowane: ");
        for (int liczba : wylosowaneLiczby) {
            System.out.print(liczba + " ");
        }
        System.out.println("\nLiczby użytkownika: ");
        for (int liczba : uzytkownikLiczby) {
            System.out.print(liczba + " ");
        }
        System.out.println("\nLiczb powtarzających się: " + powtarzajaceLiczby);
    }

    private static void losujLiczby(int[] tablica) {
        Random random = new Random();
        Set<Integer> wylosowane = new HashSet<>();

        while (wylosowane.size() < 6) {
            int liczba = random.nextInt(49) + 1; // Losowanie liczby z przedziału 1-49
            if (wylosowane.add(liczba)) {
                tablica[wylosowane.size() - 1] = liczba;
            }
        }
    }

    private static void wczytajLiczby(int[] tablica) {
        Scanner scanner = new Scanner(System.in);
        Set<Integer> wprowadzone = new HashSet<>();

        System.out.println("Wprowadź 6 różnych liczb z przedziału 1-49:");

        while (wprowadzone.size() < 6) {
            int liczba = scanner.nextInt();
            if (liczba < 1 || liczba > 49) {
                System.out.println("Liczba musi być z przedziału 1-49. Spróbuj ponownie.");
            } else if (wprowadzone.add(liczba)) {
                tablica[wprowadzone.size() - 1] = liczba;
            } else {
                System.out.println("Ta liczba już została wprowadzona. Spróbuj ponownie.");
            }
        }
    }

    private static int sprawdzPowtorzenia(int[] tablica1, int[] tablica2) {
        int licznik = 0;
        for (int liczba1 : tablica1) {
            for (int liczba2 : tablica2) {
                if (liczba1 == liczba2) {
                    licznik++;
                }
            }
        }
        return licznik;
    }
}
