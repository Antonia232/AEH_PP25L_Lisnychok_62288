
public class Main {
    // Metoda wypisująca znak w formie prostokąta
    public static void printSymbolLines(char symbol, int width, int height) {
        for (int i = 0; i < height; i++) {
            for (int j = 0; j < width; j++) {
                System.out.print(symbol);
            }
            System.out.println();
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Podaj znak do wydrukowania: ");
        char znak = scanner.next().charAt(0);

        System.out.print("Podaj liczbę znaków w wierszu: ");
        int szerokosc = scanner.nextInt();

        System.out.print("Podaj liczbę wierszy: ");
        int wysokosc = scanner.nextInt();

        // Wywołanie metody
        printSymbolLines(znak, szerokosc, wysokosc);

        scanner.close();
    }
}
