public class Main {
    public static void main(String[] args) {
        
        int x = 10;
        int doubleX = x * 2;
        int squareX = x * x;
        System.out.println("x = " + x);
        System.out.println("Dwukrotność x: " + doubleX);
        System.out.println("x do kwadratu: " + squareX);
    }
}
