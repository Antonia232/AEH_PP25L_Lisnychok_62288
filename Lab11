import java.util.*;

class Student {
    private String indeks;
    private String imie;
    private String nazwisko;
    private List<Integer> oceny;

    public Student(String indeks, String imie, String nazwisko, List<Integer> oceny) {
        this.indeks = indeks;
        this.imie = imie;
        this.nazwisko = nazwisko;
        this.oceny = oceny;
    }

    public String getIndeks() {
        return indeks;
    }

    public String getImie() {
        return imie;
    }

    public String getNazwisko() {
        return nazwisko;
    }

    public List<Integer> getOceny() {
        return oceny;
    }

    public double obliczSrednia() {
        return oceny.stream().mapToInt(Integer::intValue).average().orElse(0);
    }
}

public class Main {
    public static void main(String[] args) {
        List<Student> students = Arrays.asList(
                new Student("12345", "Jan", "Kowalski", Arrays.asList(5, 3, 5)),
                new Student("67890", "Anna", "Nowak", Arrays.asList(4, 5, 3, 5)),
                new Student("54321", "Paweł", "Wiśniewski", Arrays.asList(2, 3, 4)),
                new Student("09876", "Katarzyna", "Kowalczyk", Arrays.asList(5, 4, 4, 5))
        );

       
        Student najlepszyStudent = Collections.max(students, Comparator.comparingDouble(Student::obliczSrednia));

        System.out.println("Student z najwyższą średnią: " + najlepszyStudent.getImie() + " " + najlepszyStudent.getNazwisko() +
                " (" + najlepszyStudent.getIndeks() + ") - Średnia: " + najlepszyStudent.obliczSrednia());


        System.out.println("Studenci posortowani według nazwisk:");
        students.stream()
                .sorted(Comparator.comparing(Student::getNazwisko))
                .forEach(stud -> System.out.printf("%s %s (%s) - Średnia: %.2f%n",
                        stud.getImie(), stud.getNazwisko(), stud.getIndeks(), stud.obliczSrednia()));
    }
}
